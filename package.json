{
    "name": "factoidd",
    "version": "4.0.0",
    "description": "Fatoidd tracks factoid receipts in a fiat currency of your choice.",
    "main": "build/index.js",
    "scripts": {
        "build": "tsc",
        "test": "ENV_FILE=test mocha -r ts-node/register -r env  **/*.spec.ts",
        "test:watch": "nodemon --config \"./util/nodemon.test.json\"",
        "docker-build": "docker build -t factoshi/factoidd:develop .",
        "docker-push": "docker push factoshi/factoidd:develop",
        "docker-deploy": "docker build -t factoshi/factoidd:develop . && docker push factoshi/factoidd:develop"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Factoshi/factoidd.git"
    },
    "keywords": [
        "factom",
        "factoid",
        "factoidd",
        "factoshi"
    ],
    "author": "Alex Carrithers",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Factoshi/factoidd/issues"
    },
    "homepage": "https://github.com/Factoshi/factoidd#readme",
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "@types/hapi__joi": "^16.0.12",
        "@types/inquirer": "^6.5.0",
        "@types/js-yaml": "^3.12.3",
        "@types/node": "^13.11.1",
        "@types/sqlite3": "^3.1.6",
        "axios": "^0.19.2",
        "axios-retry": "^3.1.2",
        "bottleneck": "^2.19.5",
        "commander": "^5.0.0",
        "dotenv": "^8.2.0",
        "factom": "github:factoshi/factomjs",
        "inquirer": "^7.1.0",
        "joi-factom": "^1.1.2",
        "js-yaml": "^3.13.1",
        "sqlite": "^4.0.7",
        "sqlite3": "^4.1.1",
        "typescript": "^3.8.3",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@types/chai": "^4.2.11",
        "@types/mocha": "^7.0.2",
        "@types/sinon": "^9.0.0",
        "chai": "^4.2.0",
        "husky": "^4.2.5",
        "mocha": "^7.1.1",
        "nodemon": "^2.0.3",
        "sinon": "^9.0.2",
        "ts-node": "^8.8.2"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
