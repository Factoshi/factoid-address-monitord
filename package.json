{
    "name": "factoid-address-monitord",
    "version": "3.0.0",
    "description": "Accounting tool for factoid addresses",
    "main": "index.js",
    "scripts": {
        "test": "nyc mocha -r ts-node/register test/**/*.spec.ts"
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "exclude": [
            "**/*.d.ts"
