{
    "name": "factoidd",
    "version": "4.0.0",
    "description": "Fatoidd tracks factoid receipts in a fiat currency of your choice.",
    "main": "build/index.js",
    "scripts": {
        "test": "jest",
        "build": "tsc",
        "docker-build": "docker build -t factoshi/factoidd:develop .",
        "docker-push": "docker push factoshi/factoidd:develop",
        "docker-deploy": "docker build -t factoshi/factoidd:develop . && docker push factoshi/factoidd:develop",
        "start:develop": "pm2 start ecosystem.config.js",
        "restart:develop": "pm2 restart ecosystem.config.js",
        "start": "pm2 start ecosystem.config.js --env production",
        "restart": "pm2 restart ecosystem.config.js --env production",
        "stop": "pm2 stop ecosystem.config.js",
        "delete": "pm2 delete ecosystem.config.js",
        "status": "pm2 status",
        "logs": "pm2 logs --lines 50"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Factoshi/factoidd.git"
    },
    "keywords": [
        "factom",
        "factoid",
        "factoidd",
        "factoshi"
    ],
    "author": "Alex Carrithers",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Factoshi/factoidd/issues"
    },
    "homepage": "https://github.com/Factoshi/factoidd#readme",
    "dependencies": {
        "axios": "^0.19.2",
        "axios-retry": "^3.1.2",
        "bottleneck": "^2.19.5",
        "commander": "^5.0.0",
        "dotenv": "^8.2.0",
        "factom": "github:factoshi/factomjs",
        "inquirer": "^7.1.0",
        "joi-factom": "^1.1.2",
        "js-yaml": "^3.13.1",
        "pm2": "^4.2.3",
        "sqlite": "^4.0.5",
        "sqlite3": "^4.1.1",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@hapi/joi": "^15.1.1",
        "@types/chai": "^4.2.11",
        "@types/hapi__joi": "^15.0.4",
        "@types/inquirer": "^6.5.0",
        "@types/js-yaml": "^3.12.3",
        "@types/mocha": "^7.0.2",
        "@types/node": "^12.12.34",
        "@types/sinon": "^9.0.0",
        "@types/sqlite3": "^3.1.6",
        "chai": "^4.2.0",
        "husky": "^4.2.3",
        "mocha": "^7.1.1",
        "sinon": "^9.0.1",
        "ts-jest": "^24.3.0",
        "ts-node": "^8.8.2",
        "typescript": "^3.8.3"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
