    },
    "homepage": "https://github.com/Factoshi/factoid-address-monitord#readme",
    "dependencies": {
        "@types/node": "^12.0.8",
        "@types/sqlite3": "^3.1.5",
        "factom": "^1.2.3",
        "sqlite3": "^4.0.9"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.7",
        "chai": "^4.2.0",
        "mocha": "^6.1.4",
        "nyc": "^14.1.1",
        "source-map-support": "^0.5.12",
        "ts-node": "^8.2.0",
        "typescript": "^3.5.1"
